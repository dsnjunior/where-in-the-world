---
export interface Props {
  thumbnail: string;
  thumbnailAlt: string;
  name: string;
  population: string;
  region: string;
  capital: string;
  url: string;
}

const { thumbnail, thumbnailAlt, name, population, region, capital, url } = Astro.props;
---
<a class="element country" href={url}>
  <img src={thumbnail} alt={thumbnailAlt} class="flag" />
  <div class="description">
    <h2>{name}</h2>
    <p>
      <strong>Population:</strong> {population}<br />
      <strong>Region:</strong> {region}<br />
      <strong>Capital:</strong> {capital}
    </p>
  </div>
</a>
<style>
  .country {
    overflow: hidden;
    border-radius: 0.6rem;
    display: block;
    text-decoration: none;
    color: inherit;
    height: 100%;
    outline: none;
    border: 1px solid transparent;
  }
  .country:hover, .country:focus {
    border-color: currentColor;
  }
  .flag {
    width: 100%;
    height: 16.2rem;
    object-fit: cover;
  }
  .description {
    padding: 2.4rem 2rem 3.8rem;
  }
  .description h2 {
    font-size: 1.8rem;
    margin-bottom: 1rem;
  }
  .description p {
    font-size: 1.4rem;
    line-height: 2.4rem;
  }
</style>
